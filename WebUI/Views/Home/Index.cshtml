@{
    ViewData["Title"] = "Home Page";
}
<style>
    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #f2f2f2;
    }
</style>

<div class="text-center">
    <h1>Search</h1>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form method="post" asp-action="ProcessSearch" class="mt-4">
                    <div class="mb-3">
                        <label for="keywords" class="form-label">Keywords:</label>
                        <input type="text" id="keywords" name="Keywords" class="form-control" autocomplete="off" required />
                    </div>
                    <div class="mb-3">
                        <label for="algorithm" class="form-label">Algorithm:</label>
                        <select id="algorithm" name="Algorithm" class="form-select">
                            <option value="1">Top-K</option>
                            <option value="2">Knuth-Morris-Pratt</option>
                            <option value="3">Boyer-Moore</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <div id="advancedDiv" style="display:none">
                            <input type="checkbox" id="Advanced" name="Advanced" value="true" />
                            <label for="Advanced">Advanced Search</label><br />
                        </div>
                        

                        <div class="row" style="display:flex; justify-content:center" id="gramDiv">
                            <div class="col-md-6 d-flex align-items-center">
                                <label for="q_gramValue">q gram value:</label>
                                <input autocomplete="off" name="q_gramValue" for="q_gramValue" id="q_gramValue" type="number" value="2" class="form-control form-control-sm" min="1" max="15" step="1" />
                            </div>
                        </div>
                        
                        
                    </div>
                    <div class="mb-3">
                        <label class="form-label"><strong>Datasets to search on</strong>:</label><br />
                        <input type="checkbox" id="dataset1" name="Dataset1Selected" value="true" />
                        <label for="dataset1">Disneyland Reviews</label><br />
                        <input type="checkbox" id="dataset2" name="Dataset2Selected" value="true" />
                        <label for="dataset2">BBC Text Documents</label><br />
                        <input type="checkbox" id="dataset3" name="Dataset3Selected" value="true" />
                        <label for="dataset3">Humor Texts</label><br />
                        <input type="checkbox" id="dataset4" name="Dataset4Selected" value="true" />
                        <label for="dataset4">News Article Summaries</label><br />
                        <input type="checkbox" id="dataset5" name="Dataset5Selected" value="true" />
                        <label for="dataset5">Top Artists tracks from the 60s</label><br />
                       
                    </div>
                    
                    <button type="submit" class="btn btn-primary">Search</button>
                </form>
                
            </div>
            <div class="mb-5">
                <br />
                <label class="form-label"><strong>Dataset Quick Information</strong>:</label><br />
                <table>
                    <thead>
                        <tr>
                            <th>Dataset</th>
                            <th>Entry Count</th>
                            <th>Summary</th>
                            <th>Average words per entry</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Disneyland Reviews</td>
                            <td>42,656</td>
                            <td>Reviews of differnet disneyland parks across the world</td>
                            <td>129</td>
                        </tr>
                        <tr>
                            <td>BBC Text Documents</td>
                            <td>2,205</td>
                            <td>Procseed BBC text documents</td>
                            <td>370</td>
                        </tr>
                        <tr>
                            <td>Humor Texts</td>
                            <td>200,000</td>
                            <td>Jokes that may be funny</td>
                            <td>11</td>
                        </tr>
                        <tr>
                            <td>News Article Summaries</td>
                            <td>98,400</td>
                            <td>Summaries of various news articles from various news sources</td>
                            <td>58</td>
                        </tr>
                        <tr>
                            <td>Top Artists tracks from the 60s</td>
                            <td>484</td>
                            <td>Track names of the most popular artists on spotify from the 60s</td>
                            <td>4</td>
                        </tr>
                    </tbody>
                </table>


            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var dropdown = document.getElementById('algorithm');
        var advancedInput = document.getElementById('advancedDiv');
        var gramInput = document.getElementById('gramDiv');
        console.log(advancedInput);
        dropdown.addEventListener('change', function () {
            var selectedOption = dropdown.value;

            advancedInput.style.display = 'none';
            gramInput.style.display = 'none';

            if (selectedOption === '1') {
                gramInput.style.display = 'flex';
            }
            else {
                advancedInput.style.display = 'block';
            }
        });
    });
</script>